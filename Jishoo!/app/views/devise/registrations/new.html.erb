<div class="container text-center mx-auto border my-4 py-3" style="width: 400px">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:'form_signin'}) do |f| %>
  <%= devise_error_messages! %>

  <img class="my-4" src="/Jishoo_logo.png" alt="" width="72" height="72">
  <h2 class="py-3 font-weight-normal">アカウント作成</h2>

  <div class="field py-2">
    <!--<%= f.label :username %><br/>-->
    <%= f.text_field :username , :class=>"form-control", :placeholder=>"ユーザー名"%>
  </div>

  <div class="field py-2">
    <!--<%= f.label :email %><br/>-->
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control", :placeholder=>"メールアドレス"%>
  </div>

  <div class="field py-2">
    <!--<%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        characters minimum)</em>
    <% end %><br/>-->
    <%= f.password_field :password, autocomplete: "new-password" ,:class=>"form-control", :placeholder=>"パスワード(最低6文字)"%>
  </div>

  <div class="field py-2">
    <!--<%= f.label :password_confirmation %><br/>-->
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,:class=>"form-control", :placeholder=>"パスワード(確認)"%>
  </div>

  <div class="actions py-2">
    <%= f.submit "登録", :class=> "btn btn-lg btn-primary btn-block"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
